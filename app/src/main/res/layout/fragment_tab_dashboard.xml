<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#F5F5F5"
    android:layout_gravity="center"
    tools:context="com.spesialiskp.perpustakaan.Tab.TabDashboard">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat Datang di Aplikasi Perpustakaan"
        android:textColor="#292929"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:background="#FFFFFF"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Jumlah Anggota"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#292929"/>
            <TextView
                android:id="@+id/tvJmlhAnggota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="20"
                android:textSize="22dp"/>
            <View
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#8D8D8D"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.8"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Jumlah Buku"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#292929"/>
            <TextView
                android:id="@+id/tvJmlhBuku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="20"
                android:textSize="22dp"/>
            <View
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#8D8D8D"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.8"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Jumlah Peminjaman"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#292929"/>
            <TextView
                android:id="@+id/tvJmlhPeminjaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="20"
                android:textSize="22dp"/>
            <View
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#8D8D8D"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.8"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Jumlah yang telah di kembalikan"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#292929"/>
            <TextView
                android:id="@+id/tvJmlhKembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="20"
                android:textSize="22dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
