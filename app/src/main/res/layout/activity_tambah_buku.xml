<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FORM TAMBAH BUKU"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#292929"/>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#292929"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="Kode"/>
                <EditText
                    android:id="@+id/etKodeBuku"
                    android:layout_width="250dp"
                    android:layout_marginLeft="95dp"
                    android:backgroundTint="#292929"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:clickable="false"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#292929"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="Judul"/>
                <EditText
                    android:id="@+id/etJudulBuku"
                    android:layout_width="250dp"
                    android:layout_marginLeft="95dp"
                    android:backgroundTint="#292929"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#292929"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="Pengarang"/>
                <EditText
                    android:id="@+id/etPengarangBuku"
                    android:layout_width="250dp"
                    android:layout_marginLeft="95dp"
                    android:backgroundTint="#292929"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#292929"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="Penerbit"/>
                <EditText
                    android:id="@+id/etPenerbitBuku"
                    android:layout_width="250dp"
                    android:layout_marginLeft="95dp"
                    android:backgroundTint="#292929"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#292929"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="Tahun"/>
                <EditText
                    android:id="@+id/etTahunBuku"
                    android:layout_width="250dp"
                    android:layout_marginLeft="95dp"
                    android:backgroundTint="#292929"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="4"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#292929"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="Jumlah"/>
                <EditText
                    android:id="@+id/etJumlahBuku"
                    android:layout_width="250dp"
                    android:layout_marginLeft="95dp"
                    android:backgroundTint="#292929"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#292929"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="Jenis"/>
                <EditText
                    android:id="@+id/etJenisBuku"
                    android:layout_width="250dp"
                    android:layout_marginLeft="95dp"
                    android:backgroundTint="#292929"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#292929"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="Lokasi Rak"/>
                <EditText
                    android:id="@+id/etLokasiBuku"
                    android:layout_width="250dp"
                    android:layout_marginLeft="95dp"
                    android:backgroundTint="#292929"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#292929"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="Judul"/>
                <TextView
                    android:id="@+id/tvTglMasuk"
                    android:layout_width="250dp"
                    android:layout_marginLeft="100dp"
                    android:layout_height="wrap_content"
                    android:text="27-03-2019"
                    android:textSize="18dp"
                    android:textColor="#292929"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="submit"
                android:background="@color/colorPrimary"
                android:textColor="#FFF" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>