<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.spesialiskp.perpustakaan.Activity.PeminjamanActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/lny1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <RelativeLayout
            android:id="@+id/vKodePinjam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#292929"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="Kode Pinjam"/>
            <EditText
                android:id="@+id/etKodePinjam"
                android:layout_width="250dp"
                android:layout_marginLeft="115dp"
                android:backgroundTint="#292929"
                android:editable="false"
                android:clickable="false"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vKodebuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#292929"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="Kode Buku"/>
            <EditText
                android:id="@+id/etKodeBuku"
                android:layout_width="250dp"
                android:layout_marginLeft="115dp"
                android:backgroundTint="#292929"
                android:editable="false"
                android:clickable="true"
                android:focusable="false"
                android:layout_height="wrap_content"
                android:hint="Klik dan scan QR Code"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lny2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#292929"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="Judul Buku"/>
                <EditText
                    android:id="@+id/etJudulBuku"
                    android:layout_width="250dp"
                    android:layout_marginLeft="115dp"
                    android:backgroundTint="#292929"
                    android:editable="false"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#292929"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="ID Anggota"/>
                <EditText
                    android:id="@+id/etIdAnggota"
                    android:layout_width="250dp"
                    android:layout_marginLeft="115dp"
                    android:backgroundTint="#292929"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:editable="false"/>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="submit"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
