                <!--android:background="#DBDBDB" />-->

            <!--<TextView-->
                <!--android:id="@+id/tvLihatDetail"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/view"-->
