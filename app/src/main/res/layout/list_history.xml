<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/tvId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#1"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#0049FF"/>
                <TextView
                    android:id="@+id/tvNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rio Angga"
                    android:textSize="12sp"
                    android:textColor="#292929"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tvBuku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Belajar Android dengan menggunakan buku"
                    android:textSize="12sp"
                    android:textColor="#292929"
                    android:justificationMode="inter_word"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="16dp"
                        android:src="@drawable/peminjaman2"/>
                    <TextView
                        android:id="@+id/tvPinjam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17-03-2019"
                        android:textSize="12sp"
                        android:textColor="#292929"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="16dp"
                        android:src="@drawable/pengembalian2"/>
                    <TextView
                        android:id="@+id/tvKembali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17-03-2019"
                        android:textSize="12sp"
                        android:textColor="#292929"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <android.support.v7.widget.CardView
                    android:id="@+id/vProses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/red"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:gravity="right"
                    android:layout_gravity="end">
                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="di Pinjam"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_margin="5dp"/>
                </android.support.v7.widget.CardView>
                <TextView
                    android:id="@+id/tvDenda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Denda\n Rp. 0"
                    android:textSize="12sp"
                    android:textColor="#292929"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

