<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_circle_white"
        android:padding="@dimen/padding_small">
        <View
            android:layout_width="80dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="@color/primary"/>

        <LinearLayout
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/padding_small">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort Date"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/primary"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:alpha="0.1"
                    android:layout_gravity="bottom"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/vStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:layout_weight="1"
                    android:background="@drawable/background_button_filter_white">
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvDateStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01 January 2019 "
                        android:textColor="@color/primary"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12sp" />
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_drop_down_primary_24dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:background="@drawable/background_button_filter_white"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01 January 2019 "
                        android:textColor="@color/primary"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12sp" />
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_drop_down_primary_24dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/margin"
            android:text="apply"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/background_button_active"/>

    </LinearLayout>
</LinearLayout>