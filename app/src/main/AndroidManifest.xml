<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spesialiskp.perpustakaan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.ScanBarcodeActivity"></activity>
        <activity android:name=".Activity.PerpanjangActivity" />
        <activity
            android:name=".Activity.PeminjamanActivity"
            android:label="Form Peminjaman"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.TambahBukuActivity"
            android:label="Form Tambah Buku"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.UbahAnggotaActivity"
            android:label="Ubah Data Anggota"
            android:parentActivityName=".Activity.AnggotaActivity" />
        <activity
            android:name=".Activity.TambahAnggotaActivity"
            android:label="Tambah Anggota"
            android:parentActivityName=".Activity.AnggotaActivity" />
        <activity
            android:name=".Activity.AnggotaActivity"
            android:label="Anggota"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.UbahPetugasActivity"
            android:label="Ubah Data Petugas"
            android:parentActivityName=".Activity.PetugasActivity" />
        <activity
            android:name=".Activity.TambahPetugasActivity"
            android:label="Tambah Petugas"
            android:parentActivityName=".Activity.PetugasActivity" />
        <activity
            android:name=".Activity.PetugasActivity"
            android:label="Petugas"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>